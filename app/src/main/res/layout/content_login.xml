<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="herprogramacion.miganado.LoginActivity"
    tools:showIn="@layout/activity_login"
    tools:background="@drawable/fondo1"
    android:background="@drawable/fondo1">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="GestiÃ³n de Explotaciones"
        android:ems="10"
        android:layout_marginTop="46dp"
        android:id="@+id/titulo"
        android:background="@android:color/background_dark"
        android:textColor="@android:color/holo_orange_dark"
        tools:textSize="36sp"
        android:textStyle="normal|bold"
        tools:textStyle="bold"
        android:textSize="36sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="31dp"
        android:id="@+id/password"
        tools:background="@android:color/background_light"
        android:text="Password"
        android:layout_below="@+id/usuario"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logogestion"
        android:id="@+id/imageView2"
        android:contentDescription="logo"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/titulo"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Usuario"
        android:ems="10"
        android:id="@+id/usuario"
        tools:background="@android:color/background_light"
        android:clickable="false"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password" />

    <Button
        android:text="Enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        tools:text="Enviar"
        android:contentDescription="checkpassword"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logoroomsmall"
        android:id="@+id/imageView4"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button" />

</RelativeLayout>
